#include "gtest/gtest.h"

#include <libcellml>


TEST(Variable, serialise) {
    const std::string e = "";
    libcellml::Variable v;
    std::string a = v.serialise(libcellml::FORMAT_XML);
    EXPECT_EQ(e, a);
}

